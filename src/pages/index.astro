---
// Component Imports
import AstroComponent from '../components/AstroComponent.astro';
import AstroHeart from '../components/AstroHeart.astro';
import Counter from '../components/Counter.jsx';
import CounterVue from '../components/CounterVue.vue';
import Layout from '../layouts/Layout.astro';
import LayoutWithNav from '../layouts/LayoutWithNav.astro';
---
<LayoutWithNav title="Mein Titel">
	<div class="client-only">
		<Counter count=0 client:only="react">
			<h1>Hello from React! I am interactive!</h1>
		</Counter>
	</div>
	<div class="client-static">
		<Counter count=1337>
			<h1>Hello from React! I am static!</h1>
		</Counter>
	</div>
	<div class="client-static-2">
		<AstroComponent />
	</div>
	<div class="client-static" >
		<CounterVue client:only="vue">
			<h1>Hello from Vue! I am interactive!</h1>
		</CounterVue>
	</div>
	<div class="client-static-2">
		<CounterVue>
			<h1>Hello from Vue! I am static!</h1>
		</CounterVue>
	</div>
	<div class="client-static text-center">
		<h1>Webcomponents :)</h1>
		<AstroHeart></AstroHeart>
	</div>
</Layout>

<style>
.client-only {
	background-color: #00ff0022;
}
.client-static {
	background-color: #0000ff22;
	padding: 20px;
}
.client-static-2 {
	background-color: #00ffff22;
	padding: 0 20px;
}
</style>