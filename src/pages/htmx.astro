---
import LayoutWithNav from '../layouts/LayoutWithNav.astro';
import Card from '../components/Card.tsx';
---
<script src="https://unpkg.com/htmx.org@1.8.5"></script>

<LayoutWithNav title="Astro ❤️ HTMX">
<div class="container">
      <button class="mb-4 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"
              hx-post="/api/htmx"
              hx-prompt="Enter a string"
              hx-confirm="Are you sure?"
              hx-target="#response">
        Prompt Submission
      </button>
      <Card>
          <div id="response" class="my-4">
            I will be replaced by the response from the server.
          </p>
      </Card>
</div>
</LayoutWithNav>

<style>
.container {
margin: 2rem;
}
</style>