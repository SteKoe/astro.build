---
import LayoutWithNav from "../layouts/LayoutWithNav.astro";

const counter = 0

if(Astro.cookies.has("counter")){
  const cookie = Astro.cookies.get("counter")
  counter = cookie.number() + 1
}

Astro.cookies.set("counter", counter)

---
<LayoutWithNav>
  <h1>Counter From Cookie: {counter}</h1>
</LayoutWithNav>